<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePostActivity"
    android:background="@drawable/gradient">
    <EditText
        android:id="@+id/addText"
        android:layout_height= "100dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_text_box"
        android:hint="What do you want to sell"
        android:textColor="@color/black"
        android:textColorHint="#888888"
        android:gravity="top"
        android:layout_margin="16dp"
        android:padding="16dp"
        />
    <EditText
        android:id="@+id/price"
        android:layout_height= "70dp"
        android:layout_width="150dp"
        app:layout_constraintTop_toBottomOf="@id/addText"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_text_box"
        android:hint="price"
        android:textColorHint="#888888"
        android:textColor="@color/black"
        android:gravity="top"
        android:layout_margin="16dp"
        android:padding="16dp"
        />
    <TextView
        android:id="@+id/imgTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Upload pic"/>
    <ImageView
        android:id="@+id/postImage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_text_box"
        android:gravity="top"
        android:layout_margin="16dp"
        android:padding="16dp" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/postImage"
        app:layout_constraintStart_toStartOf="@id/postImage"
        app:layout_constraintEnd_toEndOf="@id/postImage"
        app:layout_constraintBottom_toBottomOf="@id/postImage"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/postButton"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf= "@+id/postImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_text_box"
        android:text="Add"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>